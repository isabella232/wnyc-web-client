<h1 class="for-screenreaders">Sub Nav</h1>
{{#liquid-bind activeTabIndex as |currentIndex|}}
<ul class="list list--inline flush">
  {{#each parsedLinks as |link index|}}
    <li class="{{if (eq index currentIndex) 'is-active '}}list-item list-item--nav">
      {{#if link.nav-slug}}
        <a href={{link.href}} {{action 'transition' link.nav-slug index bubbles=false}} class="link link--dark link--nodecor tab-link">{{link.title}}</a>
      {{else}}
        <a href={{link.href}} class="link link--dark link--nodecor tab-link">{{link.title}}</a>
      {{/if}}
      {{#if (eq index currentIndex)}}
      <div class="tab-line--liquid tab-line--red"></div>
      {{/if}}
    </li>
  {{/each}}
</ul>
{{/liquid-bind}}
