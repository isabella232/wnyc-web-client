{{#account-wrapper}}
  {{#if session.isAuthenticated}}
    {{nypr-account-forms/verify
      membershipAPI=config.wnycMembershipAPI
      session=session
      emailId=email_id
      verificationCode=verification_code
      onSuccess=(action 'goToProfile')
      onFailure=(action 'goToProfile')
    }}
  {{else}}
    {{nypr-account-forms/login
      siteName='WNYC'
      showSocialLogin=features.socialAuth
      authAPI=config.wnycAuthAPI
      session=session}}
  {{/if}}
{{/account-wrapper}}